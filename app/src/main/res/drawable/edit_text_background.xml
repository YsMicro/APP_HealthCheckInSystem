    <!-- 聚焦时 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- 圆角半径 -->
            <solid android:color="#FFFFFF" /> <!-- 背景白色 -->
            <stroke android:width="2dp" android:color="@color/colorPrimary" /> <!-- 边框 -->
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- 圆角半径 -->
            <solid android:color="#FFFFFF" /> <!-- 背景白色 -->
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- 默认边框 -->
        </shape>
    </item>
</selector>